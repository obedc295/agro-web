---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const products: CollectionEntry<'products'>[] = await getCollection('products');
export const prerender = true;
---

<Layout title="AgroWeb - products Agropecuarios">
  <main>
    <h1 class="text-center text-7xl font-extrabold mb-24">
      Agro ðŸŒ±
      <span class="block">products</span>
    </h1>

    <section aria-label="products destacados">
      <div class="px-4 mx-auto max-w-screen-xl">
        <div class="grid gap-6 md:grid-cols-2">
          {
            products.map(product => {
              const { slug, data } = product;
              const { nombre, principioActivo, categoria, presentacion, uso, toxicidad, imagen } = data;

              return (
                <article class="flex bg-gray-800 p-4 rounded-lg hover:scale-105 transition transform">
                  <a href={`/products/${slug}`} class="mb-2 xl:mb-0 transition hover:opacity-80">
                    <img
                      transition:name={`${slug}`}
                      class="mr-6 w-48 rounded object-cover h-48"
                      src={`/${imagen}`}
                      alt={nombre}
                    />
                  </a>

                  <div class="flex flex-col justify-center text-white ml-6">
                    <h2 transition:name={`title-${slug}`} class="mb-2 text-2xl font-bold leading-tight">
                      {nombre}
                    </h2>

                    <p class="mb-2 text-gray-300">{principioActivo} â€¢ {categoria}</p>
                    <p class="mb-2 text-gray-300">{uso}</p>
                    <p class="mb-2 text-gray-400 text-sm">PresentaciÃ³n: {presentacion}</p>
                    <div class={`px-2 py-1 rounded text-xs font-bold text-white ${
                      toxicidad === 'Banda roja' ? 'bg-red-600' :
                      toxicidad === 'Banda amarilla' ? 'bg-yellow-500' :
                      'bg-green-600'
                    }`}>
                      {toxicidad}
                    </div>
                  </div>
                </article>
              )
            })
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
